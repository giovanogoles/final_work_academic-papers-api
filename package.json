{
  "name": "academic-papers-api",
  "version": "1.0.0",
  "type": "module",
  "description": "API for managing academic paper submissions for a conference, requiring authentication for teachers, students, and evaluators.",
  "main": "src/app.js",
  "scripts": {
    "test": "node ./node_modules/mocha/bin/mocha.js --require @babel/register \"src/tests/{controllers,integration}/**/*.js\"",
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "coverage": "nyc npm test"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.10.0",
    "express-validator": "^7.2.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3"
  },
  "devDependencies": {
    "@babel/register": "^7.12.1",
    "chai": "^4.3.4",
    "mocha": "^11.7.2",
    "nodemon": "^2.0.7",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "reporter": ["text", "lcov"],
    "include": ["src/**/*.js"],
    "exclude": ["src/tests/**"],
    "all": true
  },
  "author": "Giovano Goles",
  "license": "MIT"
}